    script(type="text/javascript").
      horizontalElement.addEventListener('wheel', (ev) => {
        ev.preventDefault();  // stop scrolling in another direction
        horizontalElement.scrollLeft += (ev.deltaY + ev.deltaX);
      });

      $(document).ready(function(){
        $('.fullpage').hover(function(){
          $(`#nav-${$(this).attr('id')}`).addClass('active');
          }, function(){
          $(`#nav-${$(this).attr('id')}`).removeClass('active');
        });
      });

